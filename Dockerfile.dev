FROM node:18-alpine

# Install build dependencies for native modules like argon2
RUN apk add --no-cache libc6-compat python3 make g++ linux-headers

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose ports
EXPOSE 5000 5001 3001

# Start in development mode with hot reload
CMD ["npm", "run", "dev"]